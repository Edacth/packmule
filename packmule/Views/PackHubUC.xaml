<UserControl x:Class="packmule.PackHubUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:packmule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450" Background="#FFD9F8FF" Width="450" Height="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Canvas Background="#FF84ABFF" Height="20" />
        <Label Content="{Binding Title}" Margin="0,0,247,1" Width="200"/>
        <Label Content="{Binding ID}" HorizontalAlignment="Right" Width="64"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="190,388,0,-384" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
