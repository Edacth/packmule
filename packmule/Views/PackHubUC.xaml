<UserControl x:Name="UserControl" x:Class="packmule.PackHubUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:packmule"
             xmlns:pm="clr-namespace:packmule"
             mc:Ignorable="d" 
             PreviewMouseLeftButtonDown="OnPreviewMouseLeftButtonDown" PreviewMouseMove="OnPreviewMouseMove"
             d:DesignHeight="450" d:DesignWidth="450" Width="450" Height="500" Margin="{Binding Position}">
    <UserControl.Resources>
        <DataTemplate x:Key="PackInfo">
            <Grid Width="399" VerticalAlignment="Top" Margin="0" Height="59" HorizontalAlignment="Right">
                <Grid.RowDefinitions>
                    <RowDefinition Height="37*"/>
                    <RowDefinition Height="22*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.RowSpan="2" Margin="0,0,0,1"/>
                <TextBlock Text="Name" Grid.Column="1" VerticalAlignment="Top" Margin="10,10,10,0" Height="16"/>
                <TextBlock Text="Description" Grid.Column="1" VerticalAlignment="Top" Margin="10,25,10,0" Height="16" Grid.RowSpan="2"/>
                <Button Grid.Column="2" Margin="0,2,0,1" Grid.RowSpan="2" Height="59" VerticalAlignment="Bottom" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Margin="0" VerticalAlignment="Top" Height="500" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <!-- Row 0 -->
        <Canvas Background="#FF84ABFF" Height="25" Margin="0,-1,0,0" VerticalAlignment="Bottom"/>
        <Label Content="{Binding Title}" Margin="0,0,250,0"/>
        <Label Content="{Binding ID}" HorizontalAlignment="Right" Width="64" Margin="0"/>
        <!-- Row 1-->
        <Canvas Background="#FFACC3F5" Grid.Row="1" Margin="0" Grid.RowSpan="2">
            <GroupBox Header="File Structure" Grid.Row="1" Canvas.Top="332" Height="53" Width="142" Canvas.Left="10">
                <ComboBox Canvas.Left="10" Canvas.Top="342" Height="30" Margin="10,0,10,1"/>
            </GroupBox>

            <GroupBox Header="Copy Target" Grid.Row="1" Height="53" Canvas.Left="355" Canvas.Top="332" Width="85">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ComboBox Width="50" Height="30" Margin="0,0,0,1"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Backup Target" Grid.Row="1" Height="53" Canvas.Left="263" Canvas.Top="386" Width="177">
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="Enabled" Margin="4,10,43,5" VerticalAlignment="Center" HorizontalAlignment="Center" Height="16"/>
                    <ComboBox Canvas.Left="386" Canvas.Top="347" Width="50" Height="30"/>
                </StackPanel>
            </GroupBox>
        </Canvas>
        <ListBox ItemsSource="{Binding Entries}" ItemTemplate="{DynamicResource ResourceKey=PackInfo}" HorizontalAlignment="Left" Height="312" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="428"/>
        <Button Content="Button" Command="{x:Static pm:MainWindow.SetSelectedPHCmd}" CommandParameter="{Binding ID }" HorizontalAlignment="Left" Margin="232,331,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="20"/>
        <TextBox Text="{Binding BaseDirectory}" Height="23" Margin="10,12,10,10" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
