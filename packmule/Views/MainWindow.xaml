<Window x:Class="packmule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:packmule"
        mc:Ignorable="d"
        Title="Packmule" Height="600" Width="1000">
    <Grid Margin="11,10,10,10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <ItemsControl Name="icList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!--<UniformGrid Columns="2"/>-->
                        <Canvas/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!--<TextBlock Text="Test"/>-->
                        <uc:PackHub Title="TEST" ID="Whaaa" Margin="300,52,221,47" FocusManager.IsFocusScope="True"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <Button Content="Button" Command="{Binding Path=ChangeNameCommand }" Width="75"/>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Name="focusScope1" 
            FocusManager.IsFocusScope="True"
            Height="200" Width="200">
            <Button Name="button1" Height="50" Width="50"/>
            <Button Name="button2" Height="50" Width="50"/>
        </StackPanel>
        <TextBox Text="{Binding Title}" HorizontalAlignment="Left" Height="24" Margin="292,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Text="{Binding Subtitle}" HorizontalAlignment="Left" Height="24" Margin="292,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <!--<uc:PackHub Title="TEST" ID="Whaaa" Margin="300,52,221,47"/>-->
    </Grid>
</Window>
